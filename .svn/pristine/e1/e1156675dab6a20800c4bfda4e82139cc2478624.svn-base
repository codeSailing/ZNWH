//根据省份ID获取名称
    function getNameById(provinceId) {
        for (var o in iplocation) {
            if (iplocation[o] && iplocation[o].areaCode == provinceId) {
                return iplocation[o].areaName;
            }
        }
        return "安徽省";
    }

